package umariana.taller1;

import java.util.ArrayList;
import java.util.Scanner;
import mundo.Tarea;

/**
 *
 * @author JULIANA
 */
public class Taller1 {

    public static void main(String[] args) {
        System.out.println("Hello World!");
        
        Scanner lector = new Scanner (System.in);
        ArrayList<Tarea> misTareas = new ArrayList <> ();
        boolean activo=true;
        
        do {
            System.out.println("==== menu de opciones ===");
            System.out.println("1.Agregar tarea");
            System.out.println("2.Mostrar tarea");
            System.out.println("3.Terminar programa");
            System.out.println("Seleccione una opcion");
            
        
                  
            int opcion = lector.nextInt();
           
           
           
            switch(opcion){
                
            case 1:
                System.out.println("opcion 1");
                System.out.println("1. Ingrese el Id de la tarea");
                int id = lector.nextInt();
                lector.nextLine();
                System.out.println("2. Ingrese la descrpcion de la tarea");
                String descripcion = lector.nextLine();
                System.out.println("3. Ingrese la prioridad de 1-5");
                int prioridad = lector.nextInt();
              
                // creaci√≥n del objeto y llenar la informacion
                Tarea nuevaTarea = new Tarea (id,descripcion,prioridad);
                // almacenar el objeto en la contenedora 
                misTareas.add (nuevaTarea);
                System.out.println("tarea agregada satisfactoriamente");
                
           break;
            
            case 2:
                System.out.println("====TAREAS REGISTRADAS====");
                // tareas ordenadas con orden descendente 
                for (int i = 0; i < misTareas.size() - 1; i++) {
                for (int a = 0; a < misTareas.size() - 1 - i; a++) { 
                if (misTareas.get (a).getPrioridad() < misTareas.get(a + 1).getPrioridad()) {
                // temp asegura que no se pierda ningun valor al momento de ordenar
                Tarea temp = misTareas.get(a);
                misTareas.set(a, misTareas.get(a + 1));
                misTareas.set(a + 1, temp);
                }
                }
                }
                
                for(Tarea t: misTareas)
                 
                { 
                    System.out.println("id:"+ t.getIdTarea());
                    System.out.println("descripcion:"+ t.getDescripcion());
                    System.out.println("prioridad:"+ t.getPrioridad());
                    System.out.println("======");
                    
                }
                    
                        
            break;
            
            
            default:
                System.out.println("opcion no valida");
                
            }
            }while(activo);
    }
}
            
            
               
